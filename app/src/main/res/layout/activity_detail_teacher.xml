<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewModel.MainActivity">

    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:text="Choose course" />

    <Spinner
        android:id="@+id/coursesSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseTitle"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/dateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coursesSpinner"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="Choose date" />

    <Spinner
        android:id="@+id/datesSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTitle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/chosenCourse"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/datesSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="58dp"
        android:fontFamily="casual"
        android:text="Chosen course"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/chosenCost"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosenCourse"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="58dp"
        android:text="Chosen course cost"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/chosenDate"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosenCost"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="58dp"
        android:textSize="18dp"
        android:text="Chosen date"
        android:textStyle="bold"
        android:fontFamily="casual" />

    <Button
        android:id="@+id/bookClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chosenDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="100dp"
        android:drawableRight="@drawable/ic_baseline_task_alt_24"
        android:text="Book class" />

    <Button
        android:id="@+id/teacherDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookClass"
        android:layout_marginTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:drawableRight="@drawable/ic_baseline_info_24"
        android:text="Teacher Details" />

    <Button
        android:id="@+id/backToBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacherDetails"
        android:layout_marginTop="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="117dp"
        android:drawableRight="@drawable/ic_baseline_arrow_back_24"
        android:text="Back" />

</RelativeLayout>