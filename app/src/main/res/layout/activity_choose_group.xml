<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewModel.ChooseGroupActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Your Choice Details"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/subject_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/subject"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="subject: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subject"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/degree_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/subject_cube"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/degree"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="degree: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="degree"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/year_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/degree_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="study year: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="year"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/year_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/day"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="day: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/day_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="time: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/time_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/language"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="language: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="language"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/min_par_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/language_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/min_par"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="min n. participants: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_min_par"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min n. participants"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/max_par_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/min_par_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/max_par"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="max n. participants: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_max_par"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max n. participants"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/current_par_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/max_par_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/current_par"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="current n. participants: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_current_par"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n. participants"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/current_par_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/location"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="location: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/available_cube"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/location_cube"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/available"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="available: "
            android:textColor="@color/purple_200"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chosen_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="available"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_cube"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/available_cube"
        android:layout_marginTop="40dp" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>

        <Button
            android:id="@+id/join_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="join"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>